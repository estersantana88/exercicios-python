def misturar_cores_primarias(cor1, cor2):
    """Esta fun√ß√£o recebe as cores como par√¢metros"""
    cor1 = cor1.lower()
    cor2 = cor2.lower()
    
    mistura_de_cores = {
        ('vermelho', 'azul'): 'roxo',
        ('azul', 'vermelho'): 'roxo',
        ('vermelho', 'amarelo'): 'laranja',
        ('amarelo', 'vermelho'): 'laranja',
        ('azul', 'amarelo'): 'verde',
        ('amarelo', 'azul'): 'verde',
    }
    
    cores_primarias = ['azul', 'vermelho', 'amarelo']
    
    # ESTAS VERIFICA√á√ïES EST√ÉO DENTRO DA FUN√á√ÉO
    if cor1 not in cores_primarias:
        return f"'{cor1}' n√£o √© uma cor prim√°ria"
    
    if cor2 not in cores_primarias:
        return f"'{cor2}' n√£o √© uma cor prim√°ria"
    
    if cor1 == cor2:
        return f"Ser√° {cor1} (mesma cor)"
    
    combinacao = (cor1, cor2)
    if combinacao in mistura_de_cores:
        return f"{cor1} + {cor2} = {mistura_de_cores[combinacao]}"
    
    return "Combina√ß√£o n√£o encontrada"

def main():
    """Fun√ß√£o principal - AQUI ficam os inputs"""
    print("=== MISTURADOR DE CORES PRIM√ÅRIAS ===")
    print("Cores dispon√≠veis: vermelho, azul, amarelo")
    print("Digite 'sair' para encerrar")
    
    while True:
        # AQUI cor1 e cor2 s√£o criadas
        cor1 = input("\nEscolha sua primeira cor prim√°ria: ")
        
        if cor1.lower() == 'sair':
            break
        
        cor2 = input("Escolha outra cor prim√°ria: ")
        
        # AQUI chamamos a fun√ß√£o passando cor1 e cor2
        resultado = misturar_cores_primarias(cor1, cor2)
        print(f"üé® {resultado}")

# IMPORTANTE: Esta linha executa o programa
if __name__ == "__main__":
    main()